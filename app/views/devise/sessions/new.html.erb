<% provide(:title, "Sign in") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      <h1>Playlet</h1>
      <p class="lead">A strange new way to write and cast a play</p>
    </div>

    <%= form_for(:user, url: user_session_path, html: { class: "well" }) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.text_field :email, class: "form-control", placeholder: "Email address" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>

      <%= f.submit "Sign in", class: "btn btn-block btn-primary text-uppercase" %>
    <% end %>
  </div>
</div>
